<div class="col-sm-6 col-md-4 mb-4">
  <div class="card thumbnail">

    <%= content_tag 'div', '', class: 'event-background',
      style: "background-image: #{event_thumb(event)}" %>

    <div class="thumbnail-inner event-info-inner">
      <div class="card-body">
        <div class="event-description">
          <div class="card-title">
            <h3><%= link_to event.title, event_path(event) %></h3>
          </div>

          <div class="card-text">
            <h4><small><%= l event.datetime, format: :short %></small></h4>
            <div class="mt-2"><%= event.address %></div>
          </div>
          <div>
            <% event.visitors.each do |user| %>
              <div class="mt-2">
              <%= image_tag user_avatar_thumb(user), class: 'img-icon rounded-circle', title: user.name %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
