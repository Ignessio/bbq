<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
        style: "background-image: url(#{asset_pack_path('media/images/event.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :short %></h3>
            <h3><small><%= link_to @event.address,
                "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>
        </div>

        <% if current_user_can_edit?(@event) %>
          <div class="row">
            <div class="my-2 col-6">
              <%= link_to t('.edit'), edit_event_path(@event), class: 'btn btn-primary' %>
            </div>
            <div class="my-2 col-6 text-end">
              <%= link_to t('.delete'), event_path(@event), class: 'btn btn-danger',
                method: :delete, data: {confirm: t('.sure?')} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="event-comments mt-2">
        <div class="my-2">
          <%= render partial: 'comments/comment', collection: @event.comments %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="event-owner">
        <h4><%= t('.who_call') %></h4>
          <p><%= render partial: 'users/user', object: @event.user %></p>
      </div>
      <div class="event-subscriptions">
        <h4><%= t('.who_go') %></h4>
        <div>
          <p>
          <%= render partial: 'subscriptions/subscription',
            collection: @event.subscriptions.except(@new_subscription) %>
          </p>
        </div>
      </div>
      <div class="event-subscription-form">
        <h4><%= t('.i_go') %></h4>
        <div>
          <%= render partial: 'subscriptions/form', locals: {
            subscription: @new_subscription || @event.subscriptions.build
          } %>
        </div>
      </div>
    </div>
  </div>
</div>
