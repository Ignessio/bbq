<% title = "#{t('.uploaded_by')} #{render partial: 'users/user', object: photo.user}" %>

<% title <<  link_to(fa_icon('trash'), event_photo_path(photo.event, photo),
  method: :delete, data: {confirm: t('.delete_confirm')}) if current_user_can_edit?(photo) %>

<div class="event-photo my-2">
  <%= link_to(image_tag(photo.photo.variant(resize_to_limit: [100, 100])),
    photo.photo, data: {lightbox: 'gallery', title: title}) %>
</div>
