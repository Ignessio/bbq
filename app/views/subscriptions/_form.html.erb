<%= form_for [@event, subscription] do |f| %>
  <%= render "shared/error_messages", resource: subscription %>

  <% unless user_signed_in? %>
    <div class="mt-2">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="mt-2">
      <%= f.label :user_email %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <div class="mt-2">
    <%= f.submit t('.submit'), class: 'btn btn-outline-primary' %>
  </div>
<% end %>
