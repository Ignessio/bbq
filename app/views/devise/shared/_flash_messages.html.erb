<% if flash.any? %>
  <% flash.map do |name, message| %>
    <% case name %>
    <% when 'alert' %>
      <div class="col-md-6 mt-4 alert alert-danger alert-dismissible fade show" role="alert">
    <% when 'notice' %>
      <div class="col-md-6 mt-4 alert alert-success alert-dismissible fade show" role="notice">
    <% end %>
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  <% end %>
<% end %>
