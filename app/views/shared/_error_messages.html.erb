<% if resource.errors.any? %>
  <div id="alert" class="col-md-6 mt-3 alert alert-danger alert-dismissible fade show" role="alert">
    <h3><%= I18n.t :error, count: resource.errors.count %></h3>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
